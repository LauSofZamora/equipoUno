<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconReto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_beer" />

        <TextView
            android:id="@+id/descriptionReto2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:text=" "
            android:textColor="#0a0a0a"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btn_edit_reto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_pencil"
            android:background="?android:attr/selectableItemBackground" />

        <!-- BotÃ³n para eliminar reto -->
        <ImageButton
            android:id="@+id/btn_delete_reto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_bin" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0a0a0a" />

    <TextView
        android:id="@+id/descriptionReto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="Este es un ejemplo de reto 1"
        android:textColor="#0a0a0a"
        android:textSize="16sp"
        tools:ignore="DuplicateIds" />

</LinearLayout>
