<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EquipoUno" parent="android:Theme.Material.Light.NoActionBar" />

    //Aqui se evita mostrar la toolbar para el splash
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#000000</item> <!-- Fondo negro -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
           <item name="windowActionBar">false</item>
           <item name="windowNoTitle">true</item>
    </style>
    <style name="LoginTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white_selector</item>
        <item name="hintTextColor">@android:color/white</item>
    </style>

</resources>